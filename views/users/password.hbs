<div class="pub-bgcolor">
    <div class="container">
        <h3>密码管理</h3>

        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">修改密码</h3>
            </div>
            <div class="panel-body">


               <form novalidate role="form" class="form-horizontal">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1">
                                <label for="">原密码</label>
                            </div>
                            <div class="col-md-3">
                                <input type="text" class="form-control" name="accountname" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1" class="name-institution">
                                <label for="">新密码</label>
                            </div>
                            <div class="col-md-3">
                                <input type="text" class="form-control" name="accountname" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1">
                                <label for="">再次输入新密码</label>
                            </div>
                            <div class="col-md-3">
                                <input type="text" class="form-control" name="accountname" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        
                        <button type="button" class="btn btn-primary">确定</button>
                        <button type="button" class="btn btn-info">取消</button>                        
                        
                    </div>
                    
               </form>

            </div>
        </div>



    </div>
</div>