    <div id="myModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">提示信息：</h4>
                </div>
                <div class="modal-body">
                    <p>[[message]]</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal" ng-click="closeModal()">确定</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->

<div class="pub-bgcolor">
    <div class="container">

        <h3>机构信息</h3>
        <div class="panel panel-success">
            <div class="panel-heading">
                <span class="panel-title">机构信息</span>
            </div>
            <div class="panel-body">

                <form novalidate role="form">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3 text-right">
                                <label for="">国家</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" ng-model='institutionDetail.country' name="country" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3 text-right">
                                <label for="">机构（学校/公司/医院）名称</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" ng-model='institutionDetail.institutionName' name="institutionName" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3 text-right">
                                <label for="">院系/部门/科室</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" ng-model='institutionDetail.department' name="department" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3 text-right">
                                <label for="">实验室/二级部门/二级科室</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" ng-model='institutionDetail.secondaryDepartment' name="secondaryDepartment" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3 text-right">
                                <label for="">二级实验室/三级部门/三级科室</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" ng-model='institutionDetail.tertiaryDepartment' name="tertiaryDepartment" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3 text-right">
                                <label for="">负责人</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" ng-model='institutionDetail.principal' name="principal" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-3 text-right">
                                <label for="">备注</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" ng-model='institutionDetail.remarks' name="remarks" />
                            </div>
                        </div>
                    </div>

                    <div class="text-center">

                        <input type="button" class="btn btn-primary center" ng-click="institutionSave()" value="保存"/>

                        <input type="button" class="btn btn-primary center" ng-click="institutionCancel()" value="取消"/>

                    </div>

                </form>
            </div>
        </div>



    </div>
</div>