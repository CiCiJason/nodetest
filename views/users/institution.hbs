<div class="pub-bgcolor">
    <div class="container">

        <h3>机构管理</h3>
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">机构查询</h3>
            </div>
            <div class="panel-body">

                <form novalidate role="form">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1">
                                <label for="">国家</label>
                            </div>
                            <div class="col-md-3">
                                <input type="text" class="form-control" name="country" />
                            </div>

                            <div class="col-md-2">
                                <label for="">机构名称(学校/公司/医院)</label>
                            </div>
                            <div class="col-md-3">
                                <input type="text" class="form-control" name="institutionName" />
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary">查询</button>
                                <button type="submit" class="btn btn-primary">取消</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>

        <div class="panel panel-success">
            <div class="panel-heading">
                <span class="panel-title">机构列表</span>
                <a type="button" class="btn btn-primary more" href="#!/users/institutionDetail">
                    <span class="glyphicon glyphicon-plus"></span>
                    新增</a>
            </div>
            <div class="panel-body">

                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>国家</th>
                            <th>机构(学校/公司/医院)名称</th>
                            <th>院系/部门/科室</th>
                            <th>实验室/二级部门/二级科室</th>
                            <th>二级实验室/三级部门/三级科室</th>
                            <th>负责人</th>
                            <th>备注</th>
                            <th>操作列</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="x in data">
                            <td>[[x.country]]</td>
                            <td>[[x.institutionName]]</td>
                            <td>[[x.department]]</td>
                            <td>[[x.secondaryDepartment]]</td>
                            <td>[[x.tertiaryDepartment]]</td>
                            <td>[[x.principal]]</td>
                            <td>[[x.remarks]]</td>
                            <td>

                                <span class="btn btn-primary"><a href="#!/users/institutionDetail?_id=[[x._id]]&type=edit">编辑查看</a></span>
                                <button type="button" class="btn btn-info" ng-click="setDefault([[x._id]])" ng-hide="[[x.asDefaultInstitution]]">设置默认</button>
                                <button type="button" class="btn btn-warning" ng-show="[[x.asDefaultInstitution]]">默认机构</button>
                                <button type="button" class="btn btn-danger" ng-click="delete([[x._id]])">删除</button>

                            </td>
                        </tr>
                        
                    </tbody>
                </table>

                <cici-pagination page-option="option"></cici-pagination>

            </div>
        </div>

    </div>