<div class="pub-bgcolor">
    <div class="container">

        <h3>地址管理</h3>
        <div class="panel panel-success">
            <div class="panel-heading">
                <span class="panel-title">新增地址</span>
            </div>
            <div class="panel-body">

                <form novalidate role="form">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2 col-md-offset-1 text-right">
                                <label for="">国家</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" ng-model='addressDetail.country' name="country" disabled />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2 col-md-offset-1 text-right">
                                <label for="">省份</label>
                            </div>
                            <div class="col-md-8">
                                <select id="province" class="form-control" name="province" ng-change="changeProvince()">
                                    <option value="[[x]]" ng-repeat="x in addressDetail.province">[[x]]</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2 col-md-offset-1 text-right">
                                <label for="">城市</label>
                            </div>
                            <div class="col-md-8">
                                <select id="city" class="form-control" ng-model='addressDetail.city' name="city">
                                    <option value=""></option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2 col-md-offset-1 text-right">
                                <label for="">县/区</label>
                            </div>
                            <div class="col-md-8">
                                <select id="district" class="form-control" ng-model='addressDetail.district' name="district">
                                    <option value="">请选择区/县</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2 col-md-offset-1 text-right">
                                <label for="">详细住址</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" ng-model='addressDetail.detailedAddress' name="detailedAddress" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2 col-md-offset-1 text-right">
                                <label for="">邮编</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" ng-model='addressDetail.ZipCode' name="ZipCode" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2 col-md-offset-1 text-right">
                                <label for="">联系人</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" ng-model='addressDetail.contactPerson' name="contactPerson" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2 col-md-offset-1 text-right">
                                <label for="">联系电话</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" ng-model='addressDetail.contactTel' name="contactTel" />
                            </div>
                        </div>
                    </div>

                    <div class="text-center">

                        <button type="button" class="btn btn-primary center" ng-click="addressSave()">保存</button>

                        <button type="button" class="btn btn-primary center" ng-click="addressCancel()">取消</button>

                    </div>

                </form>
            </div>
        </div>



    </div>
</div>