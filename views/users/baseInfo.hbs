<div class="pub-bgcolor">

    <div class="container">


        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">用户基本信息</h3>
            </div>
            <div class="panel-body">

                <form novalidate role="form" ng-if="show">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1">
                                <label for="">账户</label>
                            </div>
                            <div class="col-md-3">
                                <label ng-bind="userInfo.accountname"></label>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1">
                                <label for="">用户姓名</label>
                            </div>
                            <div class="col-md-3">
                                <label for="" ng-bind="userInfo.username">用户姓名的名字</label>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1">
                                <label for="">邮箱</label>
                            </div>
                            <div class="col-md-3">
                                <label for="" ng-bind="userInfo.email">邮箱的名字</label>
                            </div>
                        </div>
                    </div>
                    <br>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1">
                                <label for="">电话</label>
                            </div>
                            <div class="col-md-3">
                                <label for="" ng-bind="userInfo.tel">电话的名字</label>
                            </div>
                        </div>
                    </div>
                    <br>
                </form>

                <form novalidate role="form" ng-if="!show">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1">
                                <label for="">账户</label>
                            </div>
                            <div class="col-md-3">
                                <input type="text" class="form-control" name="accountname"  ng-model="userInfo.accountname" placeholder="您的账户名"/>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1">
                                <label for="">用户姓名</label>
                            </div>
                            <div class="col-md-3">
                                <input type="text" class="form-control" name="username"  ng-model="userInfo.username" placeholder="您的姓名"/><span style="color:red" ng-show="warning">请输入您的姓名</span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1">
                                <label for="">邮箱</label>
                            </div>
                            <div class="col-md-3">
                                <input type="email" class="form-control" name="email"  ng-model="userInfo.email" placeholder="您的邮箱"/>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1">
                                <label for="">电话</label>
                            </div>
                            <div class="col-md-3">
                                <input type="text" class="form-control" name="tel"  ng-model="userInfo.tel" placeholder="您的常用电话"/><span style="color:red" ng-show="warning">请输入您的电话</span>
                            </div>
                        </div>
                    </div>

                </form>

                <a class="btn btn-primary" ng-click='changeUserInfo()' ng-if="show">编辑</a>
                <a class="btn btn-primary" ng-click='saveUser()' ng-if="!show" ng-disabled="!userInfo.accountname||!userInfo.username||!userInfo.email||!userInfo.tel">保存</a>
                <a class="btn btn-primary" ng-click='canceledit()' >取消</a>

            </div>
        </div>



        <div class="panel panel-success">
            <div class="panel-heading">
                <span class="panel-title">近期送样信息表</span>
                <a class="more" href="#!/orders/myorders">更多>></a>
            </div>
