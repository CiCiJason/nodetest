<div class="pub-bgcolor">
    <div class="container">

        <h3>送样信息表管理</h3>
        <div class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">送样信息表查询</h3>
            </div>
            <div class="panel-body">

                <form novalidate role="form" class="form-horizontal">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1">
                                <label for="">送样信息表ID</label>
                            </div>
                            <div class="col-md-3">
                                <input type="text" class="form-control" name="accountname" ng-model="orderquery.orderId"/>
                            </div>

                            <div class="col-md-1" class="name-institution">
                                <label for="">送样信息表类型</label>
                            </div>
                            <div class="col-md-3">
                                <select class="form-control" name="type" ng-model="orderquery.type">
                                    <option value="1">文库无需世和混合，包lane</option>
                                    <option value="2">文库需世和混合上机，包lane</option>
                                    <option value="3">需要世和混合上机，不包lane包G</option>
                                    <option value="4">文库无需世和混合，包FC(flow cell)</option>                                        
                                </select>
                            </div>

                            <div class="col-md-1">
                                <label for="">机构地址</label>
                            </div>
                            <div class="col-md-3">
                                {{!-- <input type="text" class="form-control" name="institution"  ng-model="orderquery.institution"/> --}}
                                <select id="institution" class="form-control" name="institution" ng-model="orderquery.institution">
                                    <option value="[[x._id]]" ng-repeat="x in institutionList">[[x.institutionName]][[x.department]][[x.secondaryDepartment]][[x.tertiaryDepartment]]</option>
                                </select>
                            </div>

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-1">
                                <label for="">收货地址</label>
                            </div>
                            <div class="col-md-3">
                                {{!-- <input type="text" class="form-control" name="address"  ng-model="orderquery.address"/> --}}
                                <select id="address" class="form-control" name="address" ng-model="orderquery.address">
                                    <option value="[[x._id]]" ng-repeat="x in addressList">[[x.province]][[x.city]][[x.district]][[x.detailedAddress]] [[x.contactPerson]],[[x.contactTel]]</option>
                                </select>
                            </div>
                            <div class="col-md-1" class="name-institution">
                                <label for="">运单号</label>
                            </div>
                            <div class="col-md-3">
                                <input type="text" class="form-control" name="waybillNumber"  ng-model="orderquery.waybillNumber"/>
                            </div>
                            
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-2">
                            <a class="btn btn-primary" ng-click="query()">查询</a>
                            <a class="btn btn-primary" ng-click="queryCancel()">取消</a>
                        </div>

                    </div>

                </form>
            </div>
        </div>


        <div class="panel panel-success">
            <div class="panel-heading">
                <span class="panel-title">送样信息表列表</span>
                <a class="btn btn-primary more" href="#!/orders/orderDetail">
                    <span class="glyphicon glyphicon-plus"></span>
                    新增</a>
            </div>
            <div class="panel-body">

                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>送样信息表ID</th>
                            <th>项目ID</th>
                            <th>送样信息表类型</th>
                            <th>机构地址</th>
                            <th>收货地址</th>
                            <th>运单号</th>
                            <th>操作列</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr ng-repeat="x in data">
                            <td>[[x.orderId]]</td>
                            <td>[[x.proId]]</td>
                            <td>[[x.type]]</td>
                            <td>[[x.institutionText|limitTo:6]]...</td>
                            <td>[[x.addressText|limitTo:6]]...</td>
                            <td>[[x.waybillNumber]]</td>
                            <td>
                                <span class="btn btn-primary">
                                    <a href="#!/orders/orderDetail?_id=[[x._id]]&type=edit">编辑查看</a>
                                </span>
                                <button type="button" class="btn btn-info" ng-click="">打印</button>
                                <button type="button" class="btn btn-warning" ng-click="">物流</button>
                                <button type="button" class="btn btn-danger" ng-click="delete([[x._id]])">删除</button>
                            </td>
                        </tr>
                    </tbody>
                </table>

                    <cici-pagination page-option="option"></cici-pagination>

            </div>
        </div>

    </div>