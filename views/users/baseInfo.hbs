                            <td>
                                <button type="submit" class="btn btn-primary">编辑查看</button>
                                <button type="submit" class="btn btn-info">打印</button>
                                <button type="submit" class="btn btn-warning">物流</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>



    </div>
</div>