<div class="pub-bgcolor">
    <div class="container">

        <h3>地址管理</h3>
        <div class="panel panel-success">
            <div class="panel-heading">
                <span class="panel-title">地址列表</span>
                <a type="button" class="btn btn-primary more" href="#!/users/addressDetail">
                    <span class="glyphicon glyphicon-plus"></span>
                    新增</a>
            </div>
            <div class="panel-body">

                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>国家</th>
                            <th>省</th>
                            <th>市</th>
                            <th>区/县</th>
                            <th>详细住址</th>
                            <th>邮编</th>
                            <th>联系人</th>
                            <th>联系电话</th>
                            <th>操作列</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="x in data">
                            <td>[[x.country]]</td>
                            <td>[[x.province]]</td>
                            <td>[[x.city]]</td>
                            <td>[[x.district]]</td>
                            <td>[[x.detailedAddress]]</td>
                            <td>[[x.ZipCode]]</td>
                            <td>[[x.contactPerson]]</td>
                            <td>[[x.contactTel]]</td>                            
                            <td>
                                <span class="btn btn-primary"><a href="#!/users/addressDetail?_id=[[x._id]]&type=edit">编辑查看</a></span>
                                <button type="button" class="btn btn-info" ng-click="setDefault([[x._id]])">设置默认</button>
                                <button type="button" class="btn btn-success">默认地址</button>
                                <button type="button" class="btn btn-warning" ng-click="delete([[x._id]])">删除</button>
                            </td>
                        </tr>
                        
                   
                    </tbody>
                </table>

            </div>
        </div>



    </div>
</div>